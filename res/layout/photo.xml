<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp"
    android:background="#ffffff"> 
 <ImageButton 
    android:id="@+id/controlphoto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@drawable/shutter_selector" />
 <TextView
     android:id="@+id/tx_controlphoto"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@+id/controlphoto"
     android:layout_centerHorizontal="true"
     android:text="点击照相"
     android:textColor="#000000"
     android:textSize="20sp" />
 <Button
        android:id="@+id/choosephoto"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/controlphoto"
        android:layout_marginTop="30dip"
        android:text="@string/tx_choosephoto" 
        android:textSize="20sp"
        />
</RelativeLayout>