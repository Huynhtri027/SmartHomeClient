<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp" 
    android:background="#ffffff">
    <RelativeLayout 
        android:id="@+id/layout1"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:background="#8FBC8F">
        <ImageView 
            android:id="@+id/wind"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="32dp"
            />
        <ImageView 
            android:id="@+id/air"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/wind"/>
        <ImageView 
            android:id="@+id/number"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/air"
            />
        <TextView
            android:id="@+id/dushu"
             android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/number"
            android:layout_marginTop="33dp"
            android:text="â„ƒ"
            android:textSize="20sp"
            android:textColor="#000000"
            />
        <ImageView
            android:id="@+id/fangzi"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/number"
            android:layout_marginTop="70dp"
            android:background="@drawable/img_air_temp_display_indoor"
            />
        <ImageView
            android:id="@+id/qihou"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_toRightOf="@+id/dushu"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="15dp"
            />
        <ImageView
            android:id="@+id/diandeng"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/img_air_light"/>
    </RelativeLayout>
    <ImageButton 
        android:id="@+id/dianyuan"
        android:layout_below="@+id/layout1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/air_selector"
        android:layout_marginLeft="20dp"
        />
    <ImageView 
        android:id="@+id/tiaojie"
        android:layout_width="60dp"
        android:layout_height="180dp"
        android:layout_toRightOf="@+id/dianyuan"
        android:background="@drawable/bg_temp_normal"
        android:layout_marginTop="30dp"
         android:layout_marginLeft="30dp"
        android:layout_below="@+id/layout1"/>
    <ImageButton
        android:id="@+id/up"
        android:layout_width="60dp"
        android:layout_height="60dp" 
        android:layout_toRightOf="@+id/dianyuan"
        android:background="@drawable/up_normal"
        android:layout_marginTop="40dp"
         android:layout_marginLeft="30dp"
        android:layout_below="@+id/layout1"
        />
     <ImageButton 
        android:id="@+id/down"
        android:layout_width="60dp"
        android:layout_height="60dp" 
        android:layout_toRightOf="@+id/dianyuan"
        android:background="@drawable/down_normal"
        android:layout_marginTop="150dp"
         android:layout_marginLeft="30dp"
        android:layout_below="@+id/layout1"
        />
      <ImageButton 
        android:id="@+id/moshi"
        android:layout_width="60dp"
        android:layout_height="60dp" 
        android:layout_toRightOf="@+id/tiaojie"
        android:background="@drawable/mode_normal"
        android:layout_marginTop="40dp"
         android:layout_marginLeft="30dp"
        android:layout_below="@+id/layout1"
        />
      <ImageButton 
        android:id="@+id/fengliang"
        android:layout_width="60dp"
        android:layout_height="60dp" 
        android:layout_below="@+id/layout1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/head_shaking_normal"
        />
      <ImageButton 
        android:id="@+id/chuifeng"
        android:layout_width="60dp"
        android:layout_height="60dp" 
        android:layout_toRightOf="@+id/tiaojie"
        android:background="@drawable/wind_vertical_horizontal_selected"
        android:layout_marginTop="150dp"
         android:layout_marginLeft="30dp"
        android:layout_below="@+id/layout1"
        />
      <ImageButton 
        android:id="@+id/sun"
        android:layout_width="60dp"
        android:layout_height="60dp" 
        android:layout_below="@+id/fengliang"
        android:background="@drawable/air_quick_hot"
        android:layout_marginTop="30dp"
         android:layout_marginLeft="10dp"
        />
       <ImageButton 
        android:id="@+id/snow"
        android:layout_width="60dp"
        android:layout_height="60dp" 
        android:layout_toRightOf="@+id/sun"
        android:layout_below="@+id/fengliang"
        android:background="@drawable/air_quick_cool"
        android:layout_marginTop="30dp"
         android:layout_marginLeft="15dp"
        />
        <ImageButton 
        android:id="@+id/ring"
        android:layout_width="60dp"
        android:layout_height="60dp" 
        android:layout_below="@+id/fengliang"
        android:layout_toRightOf="@+id/snow"
        android:background="@drawable/air_time"
        android:layout_marginTop="30dp"
         android:layout_marginLeft="15dp"
        />
         <ImageButton 
        android:id="@+id/qita"
        android:layout_width="60dp"
        android:layout_height="60dp" 
        android:layout_below="@+id/fengliang"
        android:layout_toRightOf="@+id/ring"
        android:background="@drawable/custom"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        />
         

</RelativeLayout>






