<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp"
    tools:context=".indexcontent" 
    android:background="#ffffff">
    
    <TextView
        android:id="@+id/tx_menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="@string/tx_menu"
        android:textColor="#000000"
        android:textSize="30sp" />   
    <ImageButton
        android:id="@+id/tv"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_alignLeft="@+id/tx_menu"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/tx_menu"
        android:layout_marginTop="16dp"
        android:background="@drawable/machine_tv_tag" />
    <TextView
        android:id="@+id/tx_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" 
        android:layout_alignLeft="@+id/tv"
        android:layout_alignRight="@+id/tv"
        android:gravity="center_horizontal"
        android:layout_below="@+id/tv"
        android:textSize="20sp"  
        android:text="@string/tx_tv" 
        android:textColor="#000000"/>
     <ImageButton
        android:id="@+id/air"
        android:layout_width="90dip"
        android:layout_height="80dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_alignBottom="@id/tv"
        android:background="@drawable/machine_air_tag"
         />
    <TextView
        android:id="@+id/tx_air"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" 
        android:layout_alignLeft="@+id/air"
        android:layout_alignRight="@+id/air"
        android:gravity="center_horizontal"
        android:layout_below="@+id/tv"
        android:textSize="20sp"  
        android:text="@string/tx_air" 
        android:textColor="#000000"/>
