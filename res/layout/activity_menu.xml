    <ImageButton
        android:id="@+id/fan"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_alignLeft="@id/tv"
        android:layout_below="@id/tv"
        android:layout_marginTop="50dp"
        android:background="@drawable/machine_fan_tag" />
        
    <TextView
        android:id="@+id/tx_fan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/fan" 
        android:layout_alignLeft="@+id/fan"
        android:layout_alignRight="@+id/fan"
        android:gravity="center_horizontal"
        android:textSize="20sp"  
        android:text="风扇" 
        android:textColor="#000000"/>
       
    <ImageButton
        android:id="@+id/projector"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_alignBottom="@id/fan"
        android:layout_alignRight="@id/air"
        android:layout_alignTop="@+id/fan"
        android:layout_toRightOf="@+id/fan"
        android:layout_alignLeft="@id/air"
        android:background="@drawable/machine_projector_tag" />

    <TextView
        android:id="@+id/tx_projector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tx_fan"
        android:layout_alignBottom="@+id/tx_fan"
        android:layout_alignRight="@+id/projector"
        android:layout_marginRight="14dp"
        android:gravity="center_horizontal"
        android:text="投影仪"
        android:textColor="#000000"
        android:textSize="20sp" />
    <ImageButton 
        android:id="@+id/photo"
        android:layout_width="90dip"
        android:layout_height="90dip"
        android:layout_alignLeft="@id/tv"
        android:layout_below="@id/fan"
        android:layout_marginTop="50dp"
        android:background="@drawable/machine_photo_tag"/>
    <TextView
        android:id="@+id/tx_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/photo" 
        android:layout_alignLeft="@+id/photo"
        android:layout_alignRight="@+id/photo"
        android:gravity="center_horizontal"
        android:textSize="20sp"  
        android:text="单反" 
        android:textColor="#000000"/>
     <ImageButton
        android:id="@+id/exit"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_alignBottom="@id/photo"
        android:layout_alignRight="@id/air"
        android:layout_alignTop="@+id/photo"
        android:layout_toRightOf="@+id/photo"
        android:layout_alignLeft="@id/air"
        android:background="@drawable/ib_exit" />
      <TextView
        android:id="@+id/tx_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tx_photo"
        android:layout_alignBottom="@+id/tx_photo"
        android:layout_alignRight="@+id/exit"
        android:layout_marginRight="20dp"
        android:gravity="center_horizontal"
        android:text="退出"
        android:textColor="#000000"
        android:textSize="20sp" />

</RelativeLayout>
